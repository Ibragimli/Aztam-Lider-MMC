    @import url('https://fonts.googleapis.com/css2?family=Barlow+Condensed:wght@200;300;400;500;700&family=Bitter:ital,wght@0,300;0,400;0,500;0,700;1,300&display=swap');
    </style>*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" integrity="sha512-vKMx8UnXk60zUwyUnUPM3HbQo8QfmNx7+ltw8Pm5zLusl1XIfwcxo8DbWCqMGKaWeNxWA8yrx5v3SaVpMvR3CA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
    @if (TempData["Error"] != null)
    {
        <input style="z-index:30;" type="hidden" id="toaster-error" value="@TempData["Error"]" />
    }
    @if (TempData["Success"] != null)
    {
        <input style="z-index:30;" type="hidden" id="toaster-success" value="@TempData["Success"]" />
    }
    <header>
        <section id="header">
            <div class="container-web">
                <div class="row">
                    <div class=" col-lg-3 col-6   webLogo">
                        <a asp-action="index" asp-controller="home">
                            <img src="~/uploads/setting/@settings.FirstOrDefault(x => x.Key == "LogoImage")?.Value" alt="">
                        </a>
                    </div>

                    <!-- nav Web -->
                    <div class="navWeb  col-lg-8 col-md-7   navbarBox">
                        <nav class=" webNavbar">
                            <ul class="mainNavbar">
                                <li class="nav-item dropdown dropdown-hover">
                                    <a class="nav-link " role="button" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavProject" + language)?.Value)</h1>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-action="mepdesign" asp-controller="layihelendirme">
                                                <h1>
                                                    @Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavProject1" + language)?.Value)

                                                </h1>
                                            </a>
                                        </li>
                                    </ul>
                                </li>

                                <li class="nav-item ">
                                    <a class="nav-link" asp-action="index" asp-controller="xidmetler" role="button" aria-expanded="false">
                                        <h1>
                                            @Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavService" + language)?.Value)
                                        </h1>
                                    </a>
                                  
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " aria-current="page" asp-action="index" asp-controller="referanslar">
                                        <h1>
                                            @Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavReference" + language)?.Value)
                                        </h1>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " aria-current="page" asp-action="index" asp-controller="senedler">
                                        <h1>
                                            @Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavDocument" + language)?.Value)
                                        </h1>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " aria-current="page" asp-action="index" asp-controller="haqqimizda">
                                        <h1>
                                            @Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavAboutUs" + language)?.Value)
                                        </h1>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " aria-current="page" asp-action="index" asp-controller="elaqe">
                                        <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavContact" + language)?.Value)</h1>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " aria-current="page" asp-action="index" asp-controller="karyera">
                                        <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavCareer" + language)?.Value)</h1>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>

                    <div class=" col-lg-1 col-6  langSearch">
                        <!-- language -->
                        <div class="  languageBox">
                            <div class="headRight ">
                                <div class="headLanguage ">
                                    <div class="langDropdown">
                                        <a  onclick="toggleDropdown()">

                                            @Html.Raw(_localization.Getkey("Language").Value)

                                        </a>
                                        <div class="dropdown-content">
                                            <ul>
                                                <li>
                                                    <a asp-controller="Home"
                                                       asp-action="ChangeLanguage"
                                                       asp-route-culture="az-Latn-AZ">Az</a>
                                                </li>
                                                <li>
                                                    <a asp-controller="Home"
                                                       asp-action="ChangeLanguage"
                                                       asp-route-culture="en-US">En</a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="arrow-down"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- searchBox -->
                        <div class="ms-1 me-2 searchBox">
                            <a href="#" class="searchDeskBtn">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </a>
                            <form class=" mt-3 searchFormDeskBox" role="search">
                                <div class="d-flex">
                                    <input class="form-control me-2" type="search" placeholder="Search"
                                           aria-label="Search">
                                    <button class="btn btn-dark" type="submit">Search</button>
                                </div>
                            </form>
                        </div>
                        <!-- mobile navbar -->
                        <nav class="navbar navbar-mobile">
                            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                                    data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar"
                                    aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                                 aria-labelledby="offcanvasNavbarLabel">
                                <div class="offcanvas-header">
                                    <a asp-action="index" asp-controller="home">
                                        <h1 class="offcanvas-title" id="offcanvasNavbarLabel">
                                            <img style="width:70%" src="~/uploads/setting/@settings.FirstOrDefault(x => x.Key == "LogoImage")?.Value" alt="">
                                        </h1>
                                    </a>

                                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                                            aria-label="Close"></button>
                                </div>
                                <!-- nav Mobile -->
                                <div class="offcanvas-body">
                                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" role="button"
                                               data-bs-toggle="dropdown" aria-expanded="false">
                                                <h1>
                                                    @Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavProject" + language)?.Value)
                                                </h1>
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" asp-action="index" asp-controller="layihelendirmeler">
                                                        <h1>
                                                            @Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavProject1" + language)?.Value)
                                                        </h1>
                                                    </a>
                                                </li>
                                            </ul>
                                        </li>


                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="index" asp-controller="xidmetller">
                                                <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavService" + language)?.Value)</h1>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="index" asp-controller="referanslar">
                                                <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavReference" + language)?.Value)</h1>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="index" asp-controller="senedler">
                                                <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavDocument" + language)?.Value)</h1>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="index" asp-controller="haqqımızda">
                                                <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavAboutUs" + language)?.Value)</h1>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="index" asp-controller="elaqe">
                                                <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavContact" + language)?.Value)</h1>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-action="index" asp-controller="karyera">
                                                <h1>@Html.Raw(languageBases.FirstOrDefault(x => x.Key == "NavCareer" + language)?.Value)</h1>
                                            </a>
                                        </li>

                                    </ul>
                                    <form class="d-flex mt-3" role="search">
                                        <input class="form-control me-2" type="search" placeholder="Search"
                                               aria-label="Search">
                                        <button class="btn btn-dark" type="submit">Search</button>
                                    </form>
                                </div>
                            </div>
                        </nav>


                    </div>
                </div>
            </div>
        </section>
    </header>

    <main>
        @RenderBody()


    </main>



    <footer>
        <section id="copyRight">
            <div class="container-web">
                <div class="row">
                    <div class="col-lg-12">
                        <p>Copyright© @nowYear AZTAMLİDER. @Html.Raw(languageBases.FirstOrDefault(x => x.Key == "CopyrightText" + language)?.Value)</p>
                    </div>
                </div>
            </div>
        </section>
    </footer>

    <!-- @*Bootstrap  *@ -->
    <script src="./plugins/bootstrap-5.3.0-alpha3-dist/js/bootstrap.bundle.min.js"></script>
    <!-- @*Bootstrap  *@ -->
    <!-- @*jquery cdn  *@ -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
            crossorigin="anonymous" referrerpolicy="no-referrer">
    </script>
    <!-- @*jquery cdn  *@ -->
    <!-- owlCarousel -->
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/owlCarousel.js"></script>


    <script src="~/assets/js/localitaztion.js"></script>
    <script>
        $(document).ready(function () {
            $('.hamburger-icon').click(function () {
                $('.mobileNavbar').toggle();
            });
        });
    </script>


    <script>
        $(document).ready(function () {
            $('.searchDeskBtn').click(function () {
                $('.searchFormDeskBox').toggle();
            });
        });
    </script>

    <!-- headerJquery -->
    <script>
        $(document).ready(function () {
            $(window).scroll(function () {
                var headerHeight = $('header').outerHeight();

                var tempValue = headerHeight / 2.5;
                const currentScrollHeight = window.scrollY;


                if (currentScrollHeight > tempValue) {
                    $('header').addClass('headerFixed');
                } else {
                    $('header').removeClass('headerFixed');
                }
            });
        });
    </script>


  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js" integrity="sha512-VEd+nq25CkR676O+pLBnDW09R7VQX9Mdiij052gVCp5yVH3jGtH70Ho/UUv4mJDsEdTvqRCFZg0NKGiojGnUCw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": false,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        $(document).ready(function () {
            if ($("#toaster-error").length) {
                console.log($("#toaster-error"))
                toastr["error"]($("#toaster-error").val())
            }
            if ($("#toaster-success").length) {
                console.log($("#toaster-success"))
                toastr["success"]($("#toaster-success").val())
            }
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>