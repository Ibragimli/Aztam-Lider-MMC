@model SettingEditDto
@{
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Setting /</span>Edit / @Model.Key</h4>

        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <h5 class="card-header">Setting</h5>
                    <div class="card-body">
                        <form asp-action="edit" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                                @* Value *@
                                <div class="col-lg-9 mb-3">
                                    <div class="form-group">
                                        <input type="hidden" asp-for="Id" value="@Model.Id" />
                                        <label asp-for="Value" class="control-label" style=" color: #886CC0; font-weight: 700; font-size: 20px; ">
                                            @if (@Model.Value != null && !Model.Key.EndsWith("Image"))
                                            {
                                                @Model.Key
                                            }
                                          
                                        </label>
                                        @if (@Model.Value != null && Model.Key.EndsWith("Image"))
                                        {
                                            <div id="posterimage-box" class="posterimage-box row mb-3">
                                                <label asp-for="KeyImageFile" class="form-label"> @Model.Key şəkli*</label>
                                                <!-- Şəkil əlavə et -->
                                                <input asp-for="KeyImageFile" id="imagePosterInput" type="file" accept="image/png,  image/jpeg"
                                                       class="form-control">
                                                <input type="hidden" asp-for="Value" value="@Model.Value" />

                                                <div class="col-3 mt-1 mb-1">
                                                    <div style="position:relative;" class="image-box">
                                                        <input type="hidden" value="@Model.Id" />
                                                        <img class="mt-3" style="width:200px; height:160px;" src="~/uploads/setting/@Model.Value" />
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        @if (@Model.Value != null && !@Model.Key.EndsWith("Image"))
                                        {
                                            <textarea style="height:150px; max-height:400px" maxlength="5000" asp-for="Value" class="form-control"></textarea>
                                            <span asp-validation-for="Value" class="text-danger"></span>
                                        }
                                    </div>

                                    <div class="d-flex justify-content-end col-12">
                                        <a asp-action="index" asp-controller="Setting" class="btn btn-outline-warning mt-2">Geriyə qayıtmaq</a>
                                        <button type="submit" class="ms-3 btn btn-outline-primary mt-2">Redaktə et</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="content-backdrop fade"></div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/manage/js/posterImageEdit.js"></script>

}
