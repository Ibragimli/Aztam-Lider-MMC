@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('myChart').getContext('2d');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Yanvar', 'Fevral', 'Mart', 'Aprel', 'May', 'İyun', 'İyul', 'Avqust', 'Sentyabr', 'Oktyabr', 'Noyabr', 'Dekabr'],
                datasets: [{
                    label: '# Əlaqə',
                    data: [12, 12, 3, 5, 2, 3, 4, 6, 7, 8, 2, 2],
                    borderWidth: 2,
                    fill: false,

                }, {
                    label: '# Karyera',
                    data: [4, 2, 5, 6, 7, 8, 9, 1, 2, 6, 4, 10],
                    borderWidth: 2,
                    fill: false,
                }
                ],
            },

            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
            }
        });
    </script>
