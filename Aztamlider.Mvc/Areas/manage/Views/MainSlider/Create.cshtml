@{
    ViewData["Title"] = "Create";
}
@model MainSliderCreateDto

@{
    DateTime now = DateTime.UtcNow;
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">MainSlider /</span> Yaratmaq</h4>
        <div class="card">
            <div class="card-body">
                <!-- Admin Layihə   Create Start -->
                <section style="margin-top: 10px;" id="createPoster">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class=" formBox  col-lg-8 col-md-12 col-sm-12 ">

                                <form class="form-control" asp-action="create" asp-controller="MainSlider" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <!-- Layihə  Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="TitleAz" class="form-label">Slider adı (Az)*</label>
                                        <textarea asp-for="TitleAz" maxlength="300" style="max-height:300px" rows="8" type="text" class="form-control"></textarea>


                                        <span asp-validation-for="TitleAz" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                           <!-- Layihə  Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="TitleEn" class="form-label">Slider adı (En)*</label>
                                        <textarea asp-for="TitleEn" maxlength="300" style="max-height:300px" rows="8" type="text" class="form-control"></textarea>
                                        <span asp-validation-for="TitleEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                
                                           <!-- Layihə  Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="DescriptionAz" class="form-label">Slider təsvir (Az)*</label>
                                        <textarea asp-for="DescriptionAz" maxlength="500" style="max-height:300px" rows="8" type="text" class="form-control"></textarea>
                                        <span asp-validation-for="DescriptionAz" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                
                                           <!-- Layihə  Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="DescriptionEn" class="form-label">Slider təsvir (En)*</label>
                                        <textarea asp-for="DescriptionEn" maxlength="500" style="max-height:300px" rows="8" type="text" class="form-control"></textarea>
                                        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                
                                
                                     <div id="posterimage-box" class="posterimage-box row mb-3">
                                        <label asp-for="ImageFile" class="form-label">Layihənin  şəkli*</label>
                                        <!-- Şəkil əlavə et -->
                                        <input asp-for="ImageFile" id="imagePosterInput" type="file" accept="image/png,  image/jpeg, image/webp"
                                               class="form-control" >
                                                    <div class="col-3 mt-1 mb-1">
                                                        <div style="position:relative;" class="image-box">
                                                            <img class="mt-3" style="width:200px; height:160px;"  />
                                                        </div>
                                                    </div>
                                      </div>
                                 
                                    <!--  Image End -->
                             
                                    <!-- Button  Start -->
                                    <div class="row d-flex justify-content-end mb-3">
                                        <div class="col mb-1">
                                            <a style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " asp-action="index" asp-controller="MainSlider" class="btn  btn-dark">Geri dön</a>
                                        </div>
                                        <div class="col mb-1 posterButton ms-2 ">
                                            <button style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " type="submit" class="btn  btn-primary">Yaratmaq</button>
                                        </div>
                                    </div>
                                    <!-- Button  Start -->
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                <!--  Admin Project  Create  End -->

            </div>
        </div>
    </div>
    <!-- / Content -->
</div>



@section Scripts{
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/manage/js/posterImageEdit.js"></script>
}


