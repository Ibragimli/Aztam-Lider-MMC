@{
    ViewData["Title"] = "Create";
}
@model ReferenceEditViewModel

@{
    DateTime now = DateTime.UtcNow;
}
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Project /</span> Yaratmaq</h4>
        <div class="card">
            <div class="card-body">
                <!-- Admin Project  Create Start -->
                <section style="margin-top: 10px;" id="createPoster">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class=" formBox  col-lg-8 col-md-12 col-sm-12 ">

                                <form class="form-control" asp-action="edit" asp-controller="Reference" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" value="@Model.Reference.Id" asp-for="Reference.Id" />
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Reference.Name" class="form-label">Referans adı*</label>
                                        <input asp-for="Reference.Name" maxlength="150" type="text" class="form-control">
                                        <span asp-validation-for="Reference.Name" class="text-danger"></span>
                                    </div>

                                    <!-- Layihə Name   End -->
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Reference.Orderer" class="form-label">Sifarişçi adı*</label>
                                        <input asp-for="Reference.Orderer" maxlength="150" type="text" class="form-control">
                                        <span asp-validation-for="Reference.Orderer" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                    <!-- Layihələr  Start -->
                                    <div class="mb-3 highProjects">
                                        <label class="form-label">Servis növü</label>
                                        <span asp-validation-for="Reference.ServiceNameId" class="text-danger"></span>
                                        <select asp-for="Reference.ServiceNameId" class="form-select">
                                            <option hidden value="@Model.Reference.ServiceNameId" selected disabled>@Model.Reference.ServiceName.NameAz</option>

                                            @foreach (var highProject in Model.ServiceNames)
                                            {
                                                <option value="@highProject.Id">@highProject.NameAz</option>
                                            }
                                        </select>
                                    </div>
                                    <!-- Layihələr   End -->
                                    <!-- Layihələr  Start -->
                                    <div class="mb-3 highProjects">
                                        <label class="form-label">Xidmət növü</label>
                                        <span asp-validation-for="Reference.ServiceTypeId" class="text-danger"></span>
                                        <select asp-for="Reference.ServiceTypeId" class="form-select">
                                            <option hidden value="@Model.Reference.ServiceTypeId" selected disabled>@Model.Reference.ServiceType.NameAz</option>

                                            @foreach (var highProject in Model.ServiceTypes)
                                            {
                                                <option value="@highProject.Id">@highProject.NameAz</option>
                                            }
                                        </select>
                                    </div>
                                    <!-- Layihələr   End -->
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Reference.SquareMetr" class="form-label">Tikinti sahəsi*</label>
                                        <input asp-for="Reference.SquareMetr" type="int" class="form-control">
                                        <span asp-validation-for="Reference.SquareMetr " class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                    <!-- InstagramUrl  Start -->
                                    <div class="mb-3 posterTitle">
                                        <label asp-for="Reference.BuildingTypeAz" class="form-label">Bina növü (Az)*</label>
                                        <input asp-for="Reference.BuildingTypeAz" maxlength="150" type="text" class="form-control">
                                        <span asp-validation-for="Reference.BuildingTypeAz" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə ContactInfo  Start -->
                                    <!-- InstagramUrl  Start -->
                                    <div class="mb-3 posterTitle">
                                        <label asp-for="Reference.BuildingTypeEn" class="form-label">Bina növü (En)*</label>
                                        <input asp-for="Reference.BuildingTypeEn" maxlength="150" type="text" class="form-control">
                                        <span asp-validation-for="Reference.BuildingTypeEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə ContactInfo  Start -->
                                    <div class="mb-3 posterTitle">
                                        <label asp-for="Reference.Date" class="form-label">Vaxt*</label>
                                        <input asp-for="Reference.Date" maxlength="50" type="text" class="form-control">
                                        <span asp-validation-for="Reference.Date" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə DescribeAz  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Reference.LocationAz" class="form-label">Location (Az)*</label>
                                        <input asp-for="Reference.LocationAz" maxlength="120" type="text" class="form-control">
                                        <span asp-validation-for="Reference.LocationAz" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə DescribeAz   End -->
                                    <!-- Layihə DescribeAz  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Reference.LocationEn" class="form-label">Location (En)*</label>
                                        <input asp-for="Reference.LocationEn" maxlength="120" type="text" class="form-control">
                                        <span asp-validation-for="Reference.LocationEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə DescribeAz   End -->
                                    <!-- Layihə DescribeEn  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Reference.Status" class="form-label">Tamamlandı *</label>
                                        <input class="form-check-input" asp-for="Reference.Status" placeholder="...." /> @Html.DisplayNameFor(model => model.Reference.Status)
                                        <span asp-validation-for="Reference.Status" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə DescribeEn   End -->


                                    <div id="posterimage-box" class="posterimage-box row mb-3">
                                        <label asp-for="Reference.ReferenceImageFile" class="form-label">Referans şəkli*</label>
                                        <!-- Şəkil əlavə et -->
                                        <input asp-for="Reference.ReferenceImageFile" id="imagePosterInput" type="file" accept="image/png,  image/jpeg, video/mp4, image/webp"
                                               class="form-control">
                                        @foreach (var image in Model.ReferenceImages.Where(x => !x.IsDelete && x.IsPoster))
                                        {

                                            @if (Model.ReferenceImages.FirstOrDefault(x => !x.IsDelete) != null)

                                            {
                                                <div class="col-3">
                                                    <div style="position:relative;" class="image-box">
                                                        <input type="hidden" value="@image.Id" />
                                                        <img style="width:200px; height:160px;" src="~/uploads/References/@image.Image" />
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>

                                    <!-- Poster Image  Start -->
                                    <div class="mb-3 posterImages">
                                        <label asp-for="Reference.ImageFiles" class="form-label">Layihənin Şəkilləri*</label>
                                        <!-- Şəkil əlavə et -->
                                        <input asp-for="Reference.ImageFiles" id="imageInput" type="file" accept="image/png,  image/jpeg, video/mp4, image/webp"
                                               class="form-control" multiple="">
                                        <div>
                                            <p id="imageErrorMessage" class="fw-bold "></p>
                                            <span asp-validation-for="Reference.ImageFiles" class="text-danger"></span>
                                        </div>
                                        <div class="row" id="temperoryImages"></div>
                                    </div>
                                    <!-- Poster Image End -->
                                    <div id="poster-image-box" class="poster-image-box row mb-3">
                                        @foreach (var image in Model.ReferenceImages.Where(x => !x.IsDelete && !x.IsPoster))
                                        {

                                            @if (Model.ReferenceImages.FirstOrDefault(x => !x.IsDelete) != null)

                                            {
                                                <div class="col-lg-4 col-md-4 col-sm-5">
                                                    <div style="position:relative; border: 1px dotted #80808078;" class="image-box">
                                                        <input type="hidden" name="Reference.ReferenceImagesIds[]" value="@image.Id" />
                                                        <img style="width:200px; height:160px;     " src="~/uploads/References/@image.Image" />
                                                        <i id="${i}" style="   cursor: pointer; color: red; font-size: 20px; position:absolute; top:10px; right:20px;" onclick="removeFile(${i})" class="fa-solid fa-trash deleteImage"></i>
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                    <!-- Button  Start -->
                                    <div class="row d-flex justify-content-end mb-3">
                                        <div class="col mb-1">
                                            <a style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " asp-action="index" asp-controller="Reference" class="btn  btn-dark">Geri dön</a>
                                        </div>
                                        <div class="col mb-1 posterButton ms-2 ">
                                            <button style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " type="submit" class="btn  btn-primary">Redaktə et</button>
                                        </div>
                                    </div>
                                    <!-- Button  Start -->
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                <!--  Admin Project  Create  End -->

            </div>
        </div>
    </div>
    <!-- / Content -->
</div>


<script>
    const p = document.getElementById("imageErrorMessage");
    const fileInput = document.getElementById('imageInput');
    const previewImages = document.getElementById('temperoryImages');
    const selectedFiles = [];
    const dt = new DataTransfer();

    fileInput.onchange = (e) => {
        const files = Array.from(e.target.files);

        if (files.length > 8) {
            p.innerHTML = "*Maksimum 8 şəkil əlavə edə bilərsiz!";
        } else {
            if (selectedFiles.length + files.length > 8) {
                p.innerHTML = "*Maksimum 8 şəkil əlavə edə bilərsiz!";
            } else {
                files.forEach(file => {
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        const src = e.target.result;
                        dt.items.add(file);
                        selectedFiles.push({
                            file: file,
                            src: src,
                            degree: 0,
                        });
                        if (selectedFiles.length <= 8) {
                            setImages();
                        }
                    };
                    reader.readAsDataURL(file);
                });
                fileInput.value = null; // Input değerini sıfırla
            }
        }
    };

    const setImages = () => {
        let html = '';

        selectedFiles.forEach((file, i) => {
            if (i < 8) {
                html += `<div class="imageBox">
                                              <p id="${i}" onclick="removeFile(${i})"><i class="fa-solid fa-trash"></i></p>
                                              <img data-image-id="${i}" class="temperorayImage" src="${file.src}" alt="">
                                          </div>`;
            }
        });

        previewImages.innerHTML = html;
        updateInputFiles();
    };

    const updateInputFiles = () => {
        dt.items.clear();
        selectedFiles.forEach(file => {
            dt.items.add(file.file);
        });
        fileInput.files = dt.files;
    };

    const removeFile = (index) => {
        dt.items.remove(index);
        selectedFiles.splice(index, 1);
        setImages();
    };

</script>
