@{
    ViewData["Title"] = "Create";
}
@model TeamEditViewModel

@{
    DateTime now = DateTime.UtcNow;
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Team /</span> Yaratmaq</h4>
        <div class="card">
            <div class="card-body">
                <!-- Admin Project  Create Start -->
                <section style="margin-top: 10px;" id="createPoster">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class=" formBox  col-lg-8 col-md-12 col-sm-12 ">

                                <form class="form-control" asp-action="edit" asp-controller="Team" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" value="@Model.Team.Id" asp-for="Team.Id" />
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Team.Name" class="form-label">Əməkdaşın adı*</label>
                                        <input asp-for="Team.Name" maxlength="100" type="text" class="form-control">
                                        <span asp-validation-for="Team.Name" class="text-danger"></span>
                                    </div>
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Team.PositionAz" class="form-label">Əməkdaşın vəzifəsi (Az)*</label>
                                        <input asp-for="Team.PositionAz" maxlength="150" type="text" class="form-control">
                                        <span asp-validation-for="Team.PositionAz" class="text-danger"></span>
                                    </div>
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Team.PositionEn" class="form-label">Əməkdaşın vəzifəsi (En)*</label>
                                        <input asp-for="Team.PositionEn" maxlength="150" type="text" class="form-control">
                                        <span asp-validation-for="Team.PositionEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->

                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Team.DescriptionAz" class="form-label">Əməkdaş haqqında məlumat (Az)*</label>
                                        <input asp-for="Team.DescriptionAz" maxlength="300" type="text" class="form-control">
                                        <span asp-validation-for="Team.DescriptionAz" class="text-danger"></span>
                                    </div>
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="Team.DescriptionEn" class="form-label">Əməkdaş haqqında məlumat (En)*</label>
                                        <input asp-for="Team.DescriptionEn" maxlength="300" type="text" class="form-control">
                                        <span asp-validation-for="Team.DescriptionEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->

                                    <div id="posterimage-box" class="posterimage-box row mb-3">
                                        <label asp-for="Team.ImageFile" class="form-label">Profil şəkli*</label>
                                        <!-- Şəkil əlavə et -->
                                        <input asp-for="Team.ImageFile" id="imagePosterInput" type="file" accept="image/png,  image/jpeg, image/webp"
                                               class="form-control">
                                        <div class="col-3 mt-1 mb-1">
                                            <div style="position:relative;" class="image-box">
                                                <input type="hidden" value="@Model.Team.Id" />
                                                <img class="mt-3" style="width:200px; height:160px;" src="~/uploads/Teams/@Model.Team.Image" />
                                            </div>
                                        </div>
                                    </div>



                                    <!-- Button  Start -->
                                    <div class="row d-flex justify-content-end mb-3">
                                        <div class="col mb-1">
                                            <a style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " asp-action="index" asp-controller="Team" class="btn  btn-dark">Geri dön</a>
                                        </div>
                                        <div class="col mb-1 posterButton ms-2 ">
                                            <button style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " type="submit" class="btn  btn-primary">Redaktə et</button>
                                        </div>
                                    </div>
                                    <!-- Button  Start -->
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                <!--  Admin Project  Create  End -->

            </div>
        </div>
    </div>
    <!-- / Content -->
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

