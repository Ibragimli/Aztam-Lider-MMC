@{
    ViewData["Title"] = "Index";
    DateTime now = DateTime.UtcNow;

}
@model TeamIndexViewModel
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Teams </span> </h4>

        <!-- Bordered Table -->
        <div class="card">
            <div class="card-body">
                @* Pagination *@
                <div class="row">
                    <form asp-action="index" asp-controller="Team" asp-route-page="@ViewBag.Page" class="row d-flex">

                        <div class="d-flex align-items-center col-lg-3 col-md-4 col-sm-6 mb-2">
                            <input name="name" class="form-control " type="search" placeholder="Ad" aria-label="Ad">
                        </div>
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-2 text-center">
                            <button class="btn btn-outline-primary" type="submit">Axtarış</button>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 mb-2 text-end">
                            <a class="btn btn-danger" asp-action="create" asp-controller="Team">Yeni Team</a>
                        </div>
                    </form>

                    <div class="d-flex align-items-center col-11 mt-2" style="display:flex; justify-content:flex-end;">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                @if (Model.Teams.HasPrev)
                                {

                                    <li class="page-item">
                                        <a asp-action="index" asp-controller="Team" asp-route-page="@(Model.Teams.PageIndex-1)" asp-route-name="@(ViewBag.Name)" class="page-link" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                }
                                @for (int i = 1; i <= Model.Teams.TotalPages; i++)
                                {
                                    <li aria-current="page" class="page-item" @(Model.Teams.PageIndex == i ? "active" : "")>
                                        <a asp-action="index" asp-controller="Team" asp-route-page="@i" asp-route-name="@(ViewBag.Name)" class="page-link">@i</a>
                                    </li>
                                }
                                @if (Model.Teams.HasNext)
                                {
                                    <li class="page-item">
                                        <a asp-action="index" asp-controller="Team" asp-route-page="@(Model.Teams.PageIndex+1)" asp-route-name="@(ViewBag.Name)" class="page-link" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                </div>
                @* Pagination *@

                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <br />
                @*table*@
                <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Şəkil</th>
                                <th>Əməkdaşın adı</th>
                                <th>Vəzifəsi (Az)</th>
                                <th>Vəzifəsi (En)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Team in Model.Teams)
                            {
                                @*Delete Modal*@
                                @*@await Html.PartialAsync("_deleteItemModalPartiral", new TeamDeleteModal { Action = "delete", Controller = "Team", Text = "Elanı silmək istəyirsinizmi?", Id = Team.Id })*@
                                @*Delete Modal*@
                                <tr>
                                    <td class="text-center">
                                        <img src="~/uploads/Teams/@Team?.Image" width="100" height="100" />
                                    </td>
                                    <td class="text-center"><a>@Team.Name</a></td>
                                    <td class="text-center"><a>@Team.PositionAz</a></td>
                                    <td class="text-center"><a>@Team.PositionEn</a></td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-sm-around">
                                            <a asp-route-id="@Team.Id" asp-action="edit" asp-controller="Team"><i style="font-size: 26px !important; color:orange" class="fa-regular fa-pen-to-square"></i></a>
                                            <a class="delete-btn" asp-controller="Team" asp-action="delete" asp-route-id="@Team.Id"><i style="font-size:26px !important; color:red;" class="bx bx-trash me-1 "></i> </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!--/ Bordered Table -->


    </div>
    <!-- / Content -->
</div>

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>

    <script src="~/manage/assets/js/sweetAlert.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}