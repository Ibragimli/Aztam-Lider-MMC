@{
    ViewData["Title"] = "Create";
}
@model ServiceTypeEditViewModel

@{
    DateTime now = DateTime.UtcNow;
}

<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">ServiceType /</span> Yaratmaq</h4>
        <div class="card">
            <div class="card-body">
                <!-- Admin Project  Create Start -->
                <section style="margin-top: 10px;" id="createPoster">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class=" formBox  col-lg-8 col-md-12 col-sm-12 ">

                                <form class="form-control" asp-action="edit" asp-controller="ServiceType" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" value="@Model.ServiceType.Id" asp-for="ServiceType.Id" />
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="ServiceType.NameAz" class="form-label"> Xidmət növünün adı (Az)*</label>
                                        <input asp-for="ServiceType.NameAz" maxlength="150" type="text" class="form-control">
                                        <span asp-validation-for="ServiceType.NameAz" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                    <!-- Project Name  Start -->
                                    <div class="mb-3 posterName">
                                        <label asp-for="ServiceType.NameEn" class="form-label"> Xidmət növünün adı (En)*</label>
                                        <input asp-for="ServiceType.NameEn" maxlength="150" type="text" class="form-control">
                                        <span asp-validation-for="ServiceType.NameEn" class="text-danger"></span>
                                    </div>
                                    <!-- Layihə Name   End -->
                                    <!-- Button  Start -->
                                    <div class="row d-flex justify-content-end mb-3">
                                        <div class="col mb-1">
                                            <a style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " asp-action="index" asp-controller="ServiceType" class="btn  btn-dark">Geri dön</a>
                                        </div>
                                        <div class="col mb-1 posterButton ms-2 ">
                                            <button style=" height: 100%; width: 100%; display: flex; justify-content: center; align-items: center; " type="submit" class="btn  btn-primary">Redaktə et</button>
                                        </div>
                                    </div>
                                    <!-- Button  Start -->
                                </form>
                            </div>
                        </div>
                    </div>
                </section>
                <!--  Admin Project  Create  End -->

            </div>
        </div>
    </div>
    <!-- / Content -->
</div>



@section Scripts{

}

